{{page-title "Glossary"}}
<div class="search">
  <label>
    <span>Search:</span>
    <Input @value={{this.query}} class="light" />
  </label>
</div>
<div class="definition-container">
  {{#each this.results as |item|}}
    <div class="row"><p class="title">{{item.title}}</p><p class="definition">{{item.definition}}</p></div>
  {{/each}}
</div>